<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "ru.svetozarov.models.dao.StudentsMapper">
    <resultMap id = "student" type = "ru.svetozarov.models.pojo.Student">
        <id property = "id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>
    <select id = "getStudentById" parameterType = "java.lang.Integer" resultMap="student">
        select id, name from student where id=#{id}
    </select>


    <select id = "selectAllStudent"  resultMap="student">
        select id, name from student
    </select>
</mapper>